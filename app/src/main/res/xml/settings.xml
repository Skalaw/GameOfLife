<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/category_board"/>

    <EditTextPreference
        android:defaultValue="@integer/board_row_default"
        android:dialogTitle="@string/board_row_dialog_title"
        android:inputType="number"
        android:key="@string/board_row_key"
        android:summary="@string/board_row_summary"
        android:title="@string/board_row_title"/>

    <EditTextPreference
        android:defaultValue="@integer/board_column_default"
        android:dialogTitle="@string/board_column_dialog_title"
        android:inputType="number"
        android:key="@string/board_column_key"
        android:summary="@string/board_column_summary"
        android:title="@string/board_column_title"/>

    <Preference
        android:key="@string/board_list_key"
        android:summary="@string/board_list_summary"
        android:title="@string/board_list_title"/>

    <Preference
        android:key="@string/board_list_external_key"
        android:summary="@string/board_list_external_summary"
        android:title="@string/board_list_external_title"/>

    <EditTextPreference
        android:dialogTitle="@string/board_save_dialog_title"
        android:key="@string/board_save_key"
        android:summary="@string/board_save_summary"
        android:title="@string/board_save_title"/>

    <PreferenceCategory
        android:title="@string/category_time"/>

    <EditTextPreference
        android:defaultValue="@integer/interval_update_default"
        android:dialogTitle="@string/interval_update_dialog_title"
        android:inputType="number"
        android:key="@string/interval_update_key"
        android:summary="@string/interval_update_summary"
        android:title="@string/interval_update_title"/>

</PreferenceScreen>